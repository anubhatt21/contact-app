<h2> New Contact </h2>

<%= form_tag "/contacts", method: :post do %>

<div class="form-group">
First Name : <input type="text" class="form-control" name="form_first_name">
</div>

<div class="form-group">
Middle Name : <input type="text" class="form-control" name="form_middle_name">
</div>

<div class="form-group"> 
Last Name : <input type="text" class="form-control" name="form_last_name">
</div>

<div class="form-group">
Email : <input type="text" class="form-control" name="form_email">
</div>

<div class="form-group"> 
Phone Number : <input type="text" class="form-control" name="form_phone_number">
</div>

<input type="submit" class="btn btn-default" value="Create contact">

<% end %>